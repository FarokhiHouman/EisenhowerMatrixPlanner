<!-- Views/Windows/TaskEditDialog.xaml -->
<Window x:Class="EisenhowerMatrixPlanner.Views.Windows.TaskEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="340" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f8f9fa">
	<Grid Margin="25">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- عنوان تسک -->
		<TextBox Text="{Binding Title}"
                 FontSize="18"
                 FontWeight="SemiBold"
                 Margin="0,0,0,25"
                 Padding="10"
                 BorderBrush="#ddd"
                 BorderThickness="1"/>

		<!-- اهمیت -->
		<StackPanel Grid.Row="1" Margin="0,0,0,20">
			<TextBlock Text="Importance (1–10)" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
			<Slider Minimum="1" Maximum="10"
                    Value="{Binding Importance}"
                    TickPlacement="BottomRight"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    LargeChange="1"/>
			<TextBlock Text="{Binding Importance}" 
                       HorizontalAlignment="Center" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#d32f2f"
                       Margin="0,8,0,0"/>
		</StackPanel>

		<!-- فوریت -->
		<StackPanel Grid.Row="2" Margin="0,0,0,30">
			<TextBlock Text="Urgency (1–10)" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
			<Slider Minimum="1" Maximum="10"
                    Value="{Binding Urgency}"
                    TickPlacement="BottomRight"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    LargeChange="1"/>
			<TextBlock Text="{Binding Urgency}" 
                       HorizontalAlignment="Center" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#1976d2"
                       Margin="0,8,0,0"/>
		</StackPanel>

		<!-- دکمه‌ها -->
		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Cancel" 
                    Width="90" Height="40" 
                    Margin="0,0,12,0"
                    Click="Cancel_Click"/>
			<Button Content="Save" 
                    Width="100" Height="40"
                    Background="#1976d2"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="Save_Click"/>
		</StackPanel>
	</Grid>
</Window>