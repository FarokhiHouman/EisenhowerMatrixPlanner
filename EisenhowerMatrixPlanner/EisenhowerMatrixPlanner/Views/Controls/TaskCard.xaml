<!-- Views/Controls/TaskCard.xaml -->
<UserControl x:Class="EisenhowerMatrixPlanner.Views.Controls.TaskCard"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Width="170" Height="110"
			 Cursor="Hand">

	<!-- Clip برای گوشه گرد -->
	<UserControl.Clip>
		<RectangleGeometry RadiusX="16" RadiusY="16"
						   Rect="0,0,170,110"/>
	</UserControl.Clip>

	<Border Background="White"
			Padding="16"
			BorderBrush="#e0e0e0"
			BorderThickness="1"
			Effect="{StaticResource CardShadow}"
			Margin="8">

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBlock Text="{Binding Title}"
					   FontWeight="SemiBold"
					   FontSize="15"
					   Foreground="#1a1a1a"
					   TextWrapping="Wrap"
					   MaxHeight="50"
					   TextTrimming="CharacterEllipsis"/>

			<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Bottom">
				<TextBlock Text="Imp:" FontSize="12" Foreground="#666"/>
				<TextBlock Text="{Binding Importance}" FontWeight="Bold" FontSize="13" Margin="5,0,15,0" Foreground="#d32f2f"/>
				<TextBlock Text="Urg:" FontSize="12" Foreground="#666"/>
				<TextBlock Text="{Binding Urgency}" FontWeight="Bold" FontSize="13" Margin="5,0,0,0" Foreground="#1976d2"/>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>